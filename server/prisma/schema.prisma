datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  avatar          String?
  bio             String?
  createdAt       DateTime         @default(now())
  email           String?
  id              String           @id @default(cuid())
  name            String?
  password        String
  roles           String[]
  scheduleConfigs ScheduleConfig[]
  updatedAt       DateTime         @updatedAt
  username        String           @unique
  userThemes      UsuarioTema[]
}

model Course {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  title       String
  updatedAt   DateTime @updatedAt
}

model Theme {
  createdAt   DateTime      @default(now())
  description String?
  id          String        @id @default(cuid())
  name        String
  updatedAt   DateTime      @updatedAt
  userTheme   UsuarioTema[]
}

model UsuarioTema {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  idTema    Theme    @relation(fields: [idTemaId], references: [id])
  idTemaId  String   @unique
  idUser    User     @relation(fields: [idUserId], references: [id])
  idUserId  String   @unique
  updatedAt DateTime @updatedAt
}

model ScheduleConfig {
  createdAt DateTime                  @default(now())
  dayWeek   EnumScheduleConfigDayWeek
  id        String                    @id @default(cuid())
  idUser    User                      @relation(fields: [idUserId], references: [id])
  idUserId  String
  timeEnd   String
  timeStart String
  updatedAt DateTime                  @updatedAt
}

enum EnumScheduleConfigDayWeek {
  segunda
  terca
  quarta
  quinta
  sexta
  sabado
  domingo
}