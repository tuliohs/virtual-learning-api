datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt  DateTime      @default(now())
  firstName  String?
  id         String        @id @default(cuid())
  lastName   String?
  password   String
  roles      String[]
  updatedAt  DateTime      @updatedAt
  username   String        @unique
  userThemes UsuarioTema[]
}

model Course {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  title       String
  updatedAt   DateTime @updatedAt
}

model Theme {
  createdAt   DateTime      @default(now())
  description String?
  id          String        @id @default(cuid())
  name        String
  updatedAt   DateTime      @updatedAt
  userTheme   UsuarioTema[]
}

model UsuarioTema {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  idTema    Theme    @relation(fields: [idTemaId], references: [id])
  idTemaId  String   @unique
  idUser    User     @relation(fields: [idUserId], references: [id])
  idUserId  String   @unique
  updatedAt DateTime @updatedAt
}