datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  avatar          String?
  bio             String?
  createdAt       DateTime         @default(now())
  email           String?
  id              String           @id @default(cuid())
  name            String?
  password        String
  roles           String[]
  scheduleConfigs ScheduleConfig[]
  updatedAt       DateTime         @updatedAt
  username        String           @unique
  usuarioTemas    UsuarioTema[]
}

model Course {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  title       String
  updatedAt   DateTime @updatedAt
}

model Theme {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  name         String
  updatedAt    DateTime      @updatedAt
  usuarioTemas UsuarioTema[]
}

model UsuarioTema {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  theme     Theme?   @relation(fields: [themeId], references: [id])
  themeId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model ScheduleConfig {
  createdAt DateTime                  @default(now())
  dayWeek   EnumScheduleConfigDayWeek
  id        String                    @id @default(cuid())
  idUser    User                      @relation(fields: [idUserId], references: [id])
  idUserId  String
  timeEnd   String
  timeStart String
  updatedAt DateTime                  @updatedAt
}

enum EnumScheduleConfigDayWeek {
  segunda
  terca
  quarta
  quinta
  sexta
  sabado
  domingo
}